<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglesson"
    android:orientation="horizontal"
    tools:context="com.example.admin.worldhistoryp.Lesson">



    <LinearLayout
        android:id="@+id/linearamerica"
        android:layout_width="120dp"
        android:layout_height="450dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="200dp" />
        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="450dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="50dp" />


            <ImageView
                android:id="@+id/LessonAmerica"
                android:layout_width="100dp"
                android:layout_height="193dp"
                app:srcCompat="@drawable/icamerica" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="450dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:id="@+id/lineareurasia"
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/LessonEurope"
                android:layout_width="106dp"
                android:layout_height="144dp"
                app:srcCompat="@drawable/iceurope" />

            <ImageView
                android:id="@+id/LessonAsia"
                android:layout_width="98dp"
                android:layout_height="119dp"
                app:srcCompat="@drawable/icasia" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearafricaaustralia"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/LessonAfrica"
                android:layout_width="105dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/icafrica" />

            <ImageView
                android:id="@+id/LessonAustralia"
                android:layout_width="100dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/icaustralia" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
