<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.worldhistoryp.Game"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/bggame">


    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="1000dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="50dp"
                android:layout_width="1000dp"
                android:layout_height="500dp"
                android:layout_marginBottom="1dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LinearGame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/game1"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/circlebg"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/icg1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LinearGame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/game2"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebgtwo"
                android:padding="10dp"
                android:src="@drawable/icg2" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LinearGame3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/game3"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebgthree"
                android:padding="10dp"
                android:src="@drawable/icg3" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
